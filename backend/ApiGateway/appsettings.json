{
    "Logging": {
        "LogLevel": {
            "Default": "Information"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "scada-core": {
                "ClusterId": "scada-core-cluster",
                "Match": {
                    "Path": "/api/tags/{**catch-all}"
                }
            },
            "data-acquisition": {
                "ClusterId": "data-acquisition-cluster",
                "Match": {
                    "Path": "/api/data/{**catch-all}"
                }
            },
            "alarm-management": {
                "ClusterId": "alarm-management-cluster",
                "Match": {
                    "Path": "/api/alarms/{**catch-all}"
                }
            },
            "auth-service": {
                "ClusterId": "auth-service-cluster",
                "Match": {
                    "Path": "/api/auth/{**catch-all}"
                }
            },
            "reporting-service": {
                "ClusterId": "reporting-service-cluster",
                "Match": {
                    "Path": "/api/reports/{**catch-all}"
                }
            }
        },
        "Clusters": {
            "scada-core-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://scada-core:5000"
                    }
                }
            },
            "data-acquisition-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://data-acquisition:5000"
                    }
                }
            },
            "alarm-management-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://alarm-management:5000"
                    }
                }
            },
            "auth-service-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://auth-service:5000"
                    }
                }
            },
            "reporting-service-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://reporting-service:5000"
                    }
                }
            }
        }
    }
}